    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge;chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "", :name => "description"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}

    = partial "icons"

    /[if lt IE 9]
      <script src="javascripts/vendor/html5-3.6-respond-1.4.2.min.js"></script> 

    %title= current_page.data.title ? "yt → " + current_page.data.title : "→ Yury in " + @location

    = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"
    = stylesheet_link_tag "all"

  %body{:class => current_page.data.bodyclass}
    .container
      %header
        .row
          =link_to "/" do
            %h1
              Yury in
              %span.location
                =@location
        .row
          %p
            A blog about important things
        .row
          %nav
            %ul
              %li.articles-link{ nav_active('index.html') }
                =link_to '/' do
                  %svg.icon.icon-arrow-left
                    %use{"xlink:href" => "#icon-arrow-left"}
                  Articles
              %li.about{ nav_active('about/index.html') } 
                =link_to 'About', '/about'
              %li.projects{ nav_active('projects/index.html') }
                =link_to 'Projects', '/projects'                
      .row
        #main{:role => "main"}
          - unless current_page.data.title.nil?
            %h2.article-title
              = current_page.data.title
          = yield
      .row
        %footer#footer
          %ul
            %li.email
              %p.label
                Email
              %p.link
                %a{:href => "mailto:ytspar@gmail.com"}
                  gmail
            %li.twitter
              %p.label
                Twitter
              %p.link
                =link_to '@ytspar', 'https://twitter.com/ytspar'
            %li.instagram
              %p.label
                Instagram
              %p.link
                =link_to '@ytspar', 'http://instagram.com/_u/ytspar'
            %li.github
              %p.label
                Github
              %p.link
                %a{:href => "https://github.com/ytspar/"}
                  :escaped
                    /ytspar
                %a{:href => "https://github.com/ytspar/yuryin"}
                  :escaped
                    /yuryin
 
          %hr
          %ul.bottom
            %li.copyright
              %p
                Copyright #{DateTime.now.strftime("%Y")}
            %li.yurytsukerman
              %p
                Yury Tsukerman

